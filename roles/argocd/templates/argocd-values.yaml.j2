global:
  image:
    tag: "v2.8.3"
  networkPolicy:
    create: false
  dualStack:
    enabled: false
    ipFamilyPolicy: "SingleStack"
    ipFamilies:
      - "IPv4"
  deploymentAnnotations: {}  # 이 값을 추가하면 deepCopy 문제 해결됨 ✅

server:
  service:
    type: LoadBalancer
  route:
    enabled: false
  ingress:
    enabled: false

configs:
  secret:
    argocdServerAdminPassword: "{{ redis_password.stdout }}"
  cm:
    application.instanceLabelKey: argocd.argoproj.io/instance
    repositories: |
      - name: helm-repo
        type: helm
        url: https://charts.bitnami.com/bitnami

redis:
  enabled: true
  name: "argocd-redis"
  service:
    labels: {}
  serviceAccount:
    create: true
  pdb:
    enabled: true
    minAvailable: 1
  networkPolicy:
    create: false
  metrics:
    enabled: false
  auth:
    enabled: true
  config:
    password: "{{ redis_password.stdout }}"
  containerPorts: {}

postgresql:
  enabled: false
  auth:
    enablePostgresUser: false
